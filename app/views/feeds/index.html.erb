<h1>Manage Feeds</h1>

<%= form_for @new_feed, url: {action: "create"} do |f| %>
  <%= f.text_field :url %>
  <%= f.submit "Add New Feed" %>
<% end %>

<hr>
<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th></th>
  </tr>
<% @feeds.each do |feed| %>
  <tr>
    <td><%= feed.name %></td>
    <td><%= feed.url %></td>
    <td><%= link_to 'Delete', feed_path(feed), 
            method: :delete,
            data: { confirm: "Are you sure you want to delete #{feed.name} with url #{feed.url}?" } %></td>
  </tr>
<% end %>
